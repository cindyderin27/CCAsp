@model AspApplicationCC.Models.Proprietaire
@{
    ViewBag.Title = "Modifier un Propriétaire";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Proprietaire", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="text-danger">
        @Html.ValidationSummary(true)
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Nom, new { @class = "form-label" });
        @Html.TextBoxFor(x => x.Nom, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nom, null, new { @class = "text-danger small" })
    </div>

    <div class="col-log-6">

