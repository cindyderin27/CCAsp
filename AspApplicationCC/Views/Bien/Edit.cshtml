@model AspApplicationCC.Models.Bien
@{
    ViewBag.Title = "Modifier un bien";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Bien", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x =>x.Id)
    <div class="text-danger">
        @Html.ValidationSummary(true)
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.Nom, new { @class = "form-label" });
        @Html.TextBoxFor(x => x.Nom, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Nom, null, new { @class = "text-danger small" })
    </div>

    @*<div class="mb-3">
        @Html.LabelFor(x => x.Prix, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Prix, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Prix, null, new { @class = "text-danger small" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(x => x.Description, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger small" })
    </div>*@
<div class="col-log-6">


    <div class="mb-3">
        @Html.LabelFor(x => x.Image, new { @class = "form-label" })
        <input type="file" accept="image/*" id="@Html.IdFor(x=>x.Image)" name="@Html.IdFor(x=>x.Image)" class="form-control" />
        @Html.ValidationMessageFor(x => x.Image, null, new { @class = "text-danger small" })
    </div>


    <div class="mb-3">
        @Html.LabelFor(x => x.Proprietaire, new { @class = "form-label" })
        @Html.DropDownListFor(x => x.IdProprietaire, Model.Proprietaires, "Choisir un propriétaire", new { @class = "form-select" })
        @Html.ValidationMessageFor(x => x.IdProprietaire, null, new { @class = "text-danger small" })
    </div>


    <button type="submit" class="btn btn-success" style="width:100%">
        <i class="icon-save">
            Save
        </i>
    </button>
</div>

}
